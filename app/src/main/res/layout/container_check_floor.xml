<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FLOOR"
            android:textColor="#272727"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_background"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="Select a damage code "/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="No damage"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="D - Dent"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="H - Hole"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="C - Cut"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="M - Missing"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="Rl - Ripped"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="BR - Broken"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="OD - Odour"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="BO - Bulged Out"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="TP - Temporary Parch"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="14dp"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:text="P - Pushed IN/OUT"
                    android:layoutDirection="rtl"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:src="@drawable/separator_line"/>
            </RadioGroup>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:paddingHorizontal="20dp"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        android:gravity="center|bottom">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_pill_background"
            android:paddingHorizontal="52dp"
            android:paddingVertical="10dp"
            android:text="Done"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>
</LinearLayout>